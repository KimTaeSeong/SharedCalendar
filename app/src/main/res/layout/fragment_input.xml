<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graycrow.sharecalendar.View.Fragment.InputFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <EditText
            android:layout_weight="0.1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="18dp"
            android:textColor="@color/color_date"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="일정을 입력하세요"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.1"
            android:layout_width="fill_parent"
            android:text="시작"
            android:textSize="18dp"
            android:textColor="@color/color_21a4ff"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_marginLeft="16dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="2012년  3월  22일"
                android:textSize="18dp"
                android:textColor="@color/color_date"
                android:layout_height="fill_parent" />
            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="오후  11시  12분"
                android:textSize="18dp"
                android:textColor="@color/color_date"
                android:layout_height="fill_parent" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_weight="0.1"
            android:layout_width="fill_parent"
            android:text="종료"
            android:textSize="18dp"
            android:textColor="@color/color_21a4ff"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_marginLeft="16dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="2012년  3월  22일"
                android:textSize="18dp"
                android:textColor="@color/color_date"
                android:layout_height="fill_parent" />
            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="오후  11시  12분"
                android:textSize="18dp"
                android:textColor="@color/color_date"
                android:layout_height="fill_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:text="날씨"
                android:textSize="18dp"
                android:textColor="@color/color_21a4ff"
                android:layout_height="fill_parent" />
            <Spinner
                android:layout_width="0dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:id="@+id/weather_spinner">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:text="색상"
                android:textSize="18dp"
                android:textColor="@color/color_21a4ff"
                android:layout_height="fill_parent" />
            <Spinner
                android:layout_width="0dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:id="@+id/color_spinner">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <info.hoang8f.widget.FButton
                android:text="등  록"
                android:textSize="18dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_ffffff"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="left"
                android:layout_height="fill_parent"
                fbutton:buttonColor="@color/color_21a4ff"
                fbutton:shadowColor="@color/fbutton_color_midnight_blue"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>
            <info.hoang8f.widget.FButton
                android:text="취  소"
                android:textSize="18dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/color_ffffff"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                fbutton:buttonColor="@color/color_21a4ff"
                fbutton:shadowColor="@color/fbutton_color_midnight_blue"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
